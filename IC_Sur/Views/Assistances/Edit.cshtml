@model IC_Sur.Models.Assistance

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Asistencia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AssistanceId" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" readonly class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalDatetime" class="control-label"></label>
                <input asp-for="ArrivalDatetime" readonly class="form-control" />
                <span asp-validation-for="ArrivalDatetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    var currentDateTime = DateTime.Now;
                    var formattedDateTime = currentDateTime.ToString("yyyy-MM-ddTHH:mm");
                }
                <label asp-for="ExitDateTime" class="control-label"></label>
                <input asp-for="ExitDateTime" value="@formattedDateTime" readonly class="form-control" />
                <span asp-validation-for="ExitDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssistanceMark" class="control-label"></label>
                <input asp-for="AssistanceMark" readonly class="form-control" />
                <span asp-validation-for="AssistanceMark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
