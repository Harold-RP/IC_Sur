@model IEnumerable<IC_Sur.Models.Assistance>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Registrar Asistencia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDatetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExitDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssistanceMark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalDatetime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExitDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssistanceMark)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AssistanceId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.AssistanceId">Detalles</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
