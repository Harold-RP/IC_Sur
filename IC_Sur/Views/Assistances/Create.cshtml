@model IC_Sur.Models.Assistance

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Asistencias</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                @{
                    var currentDateTime = DateTime.Now;
                    var formattedDateTime = currentDateTime.ToString("yyyy-MM-ddTHH:mm");
                }
                <label asp-for="ArrivalDatetime" class="control-label"></label>
                <input asp-for="ArrivalDatetime" value="@formattedDateTime" readonly class="form-control" />
                <span asp-validation-for="ArrivalDatetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssistanceMark" class="control-label"></label>
                <select asp-for="AssistanceMark" name="assistanceMark" class="form-control">
                    <option value="" disabled selected hidden>Seleccione...</option>
                    <option value="Puntual">Puntual</option>
                    <option value="Retraso">Retraso</option>
                    <option value="Falta">Falta</option>
                </select>
                <span asp-validation-for="AssistanceMark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
