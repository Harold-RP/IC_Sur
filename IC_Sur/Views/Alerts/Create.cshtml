@model IC_Sur.Models.Alert

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Alert</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                @{
                    var currentDateTime = DateTime.Now;
                    var formattedDateTime = currentDateTime.ToString("yyyy-MM-ddTHH:mm");
                }
                <label asp-for="AlertDate" class="control-label"></label>
                <input asp-for="AlertDate" value="@formattedDateTime" readonly class="form-control" />
                <span asp-validation-for="AlertDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select readonly asp-for="Status" class="form-control">
                    <option value="1" selected>Sin Leer</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
