@model IC_Sur.Models.Alert

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Alert</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlertId" />
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select readonly asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlertDate" class="control-label"></label>
                <input readonly asp-for="AlertDate" class="form-control" />
                <span asp-validation-for="AlertDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select readonly asp-for="Status" class="form-control">
                    <option value="0" selected>Leído</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
